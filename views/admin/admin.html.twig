{% extends 'admin/base.html.twig' %}
{% block title "Dashboard Admin" %}

{% block body_title "Tableau de bord administrateur" %}

{% block body %}
    <!-- Stats cards -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
        <div class="dark-card overflow-hidden shadow rounded-lg border dark-border">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-green-primary rounded-md p-3">
                        <i class="fas fa-briefcase text-black"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium dark-text-secondary truncate">Total offres</dt>
                            <dd class="text-lg font-medium text-text-primary">{{ offerCount }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-dark-bg px-5 py-3 border-t dark-border">
                <div class="text-sm">
                    <a href="#" class="font-medium dark-text-accent hover:text-green-primary">
                        Voir toutes les offres
                    </a>
                </div>
            </div>
        </div>

        <div class="dark-card overflow-hidden shadow rounded-lg border dark-border">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-green-primary rounded-md p-3">
                        <i class="fas fa-users text-black"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium dark-text-secondary truncate">Candidats</dt>
                            <dd class="text-lg font-medium text-text-primary">{{ candidateCount }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-dark-bg px-5 py-3 border-t dark-border">
                <div class="text-sm">
                    <a href="#" class="font-medium dark-text-accent hover:text-green-primary">
                        Voir tous les candidats
                    </a>
                </div>
            </div>
        </div>

        <div class="dark-card overflow-hidden shadow rounded-lg border dark-border">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-green-primary rounded-md p-3">
                        <i class="fas fa-building text-black"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium dark-text-secondary truncate">Recruteurs</dt>
                            <dd class="text-lg font-medium text-text-primary">{{ recruiterCount }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-dark-bg px-5 py-3 border-t dark-border">
                <div class="text-sm">
                    <a href="#" class="font-medium dark-text-accent hover:text-green-primary">
                        Voir tous les recruteurs
                    </a>
                </div>
            </div>
        </div>

        <div class="dark-card overflow-hidden shadow rounded-lg border dark-border">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-green-primary rounded-md p-3">
                        <i class="fas fa-file-alt text-black"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium dark-text-secondary truncate">Candidatures</dt>
                            <dd class="text-lg font-medium text-text-primary">{{ candidatureCount }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-dark-bg px-5 py-3 border-t dark-border">
                <div class="text-sm">
                    <a href="#" class="font-medium dark-text-accent hover:text-green-primary">
                        Voir toutes les candidatures
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and recent activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Chart -->
        <div class="dark-card shadow rounded-lg p-6 border dark-border">
            <h3 class="text-lg leading-6 font-medium text-text-primary mb-4">Offres par catégorie</h3>
            <div class="chart-container">
                <canvas id="categoryChart"></canvas>
            </div>
        </div>

        <!-- Recent activity -->
        <div class="dark-card shadow rounded-lg p-6 border dark-border">
            <h3 class="text-lg leading-6 font-medium text-text-primary mb-4">Activité récente</h3>
            <div class="flow-root">
                <ul class="-mb-8">
                    <li>
                        <div class="relative pb-8">
                            <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-dark-border" aria-hidden="true"></span>
                            <div class="relative flex space-x-3">
                                <div>
                                                    <span class="h-8 w-8 rounded-full bg-green-primary flex items-center justify-center ring-8 ring-dark-card">
                                                        <i class="fas fa-check text-black text-xs"></i>
                                                    </span>
                                </div>
                                <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                                    <div>
                                        <p class="text-sm text-text-primary">Nouvelle offre publiée: <span class="font-medium">Développeur Full Stack</span></p>
                                        <p class="text-xs dark-text-secondary mt-1">Par TechCorp</p>
                                    </div>
                                    <div class="text-right text-sm whitespace-nowrap dark-text-secondary">
                                        Il y a 2h
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="relative pb-8">
                            <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-dark-border" aria-hidden="true"></span>
                            <div class="relative flex space-x-3">
                                <div>
                                                    <span class="h-8 w-8 rounded-full bg-green-primary flex items-center justify-center ring-8 ring-dark-card">
                                                        <i class="fas fa-user text-black text-xs"></i>
                                                    </span>
                                </div>
                                <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                                    <div>
                                        <p class="text-sm text-text-primary">Nouveau candidat inscrit: <span class="font-medium">Jean Dupont</span></p>
                                        <p class="text-xs dark-text-secondary mt-1">Développeur Senior</p>
                                    </div>
                                    <div class="text-right text-sm whitespace-nowrap dark-text-secondary">
                                        Il y a 4h
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="relative pb-8">
                            <div class="relative flex space-x-3">
                                <div>
                                                    <span class="h-8 w-8 rounded-full bg-green-primary flex items-center justify-center ring-8 ring-dark-card">
                                                        <i class="fas fa-building text-black text-xs"></i>
                                                    </span>
                                </div>
                                <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                                    <div>
                                        <p class="text-sm text-text-primary">Nouveau recruteur vérifié: <span class="font-medium">StartUp Innov</span></p>
                                        <p class="text-xs dark-text-secondary mt-1">Paris, France</p>
                                    </div>
                                    <div class="text-right text-sm whitespace-nowrap dark-text-secondary">
                                        Il y a 6h
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>


    

{% endblock %}
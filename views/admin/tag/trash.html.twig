{% extends 'admin/base.html.twig' %}
{% block title "Catégories Supprimées" %}

{% block body_title "Gestion des categories - Corbeille" %}
{% block body %}
    <div class="dark-card shadow rounded-lg border dark-border">
        <div class="px-4 py-5 sm:px-6 border-b dark-border flex justify-between items-center">
            <h3 class="text-sm font-medium text-text-secondary italic">Liste des tags en corbeille</h3>
            <a href="/admin/tags" class="text-text-secondary hover:text-text-primary">
                <i class="fas fa-arrow-left mr-1"></i> Retour à la liste
            </a>
        </div>

        <div class="overflow-hidden">
            <table class="min-w-full divide-y divide-dark-border">
                <thead class="bg-dark-bg">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                        Nom
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                        Date de suppression
                    </th>
                    <th scope="col" class="relative px-6 py-3">
                        <span class="sr-only">Actions</span>
                    </th>
                </tr>
                </thead>

                <tbody class="divide-y divide-dark-border">
                {% for tag in tags %}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-text-primary">
                            {{ tag.name }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">
                            {{ tag.deletedAt|date('d/m/Y H:i') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="/admin/tags/restore?id={{ tag.id }}" 
                               class="text-green-primary hover:text-green-accent mr-3">
                                Restaurer
                            </a>
                            <a href="/admin/tags/delete?id={{ tag.id }}"
                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer définitivement ce tag ?')"
                               class="text-red-500 hover:text-red-400">
                                Supprimer définitivement
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="px-6 py-10 text-center text-sm text-text-secondary italic">
                            La corbeille des tags est vide.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% extends 'admin/base.html.twig' %}
{% block title "Categories" %}

{% block body_title "Gestion des categories" %}

{% block body %}
    <div class="dark-card shadow rounded-lg border dark-border">
        <div class="px-4 py-5 sm:px-6 border-b dark-border flex justify-end items-center gap-2">
            <a href="/admin/tags/trash" class="dark-button-secondary inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded">
                <i class="fas fa-trash mr-1"></i>
                Corbeille
            </a>
            <a href="/admin/tags/create" class="dark-button inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-black">
                <i class="fas fa-plus mr-1"></i>
                Ajouter
            </a>
        </div>

        <div class="overflow-hidden">
            <table class="min-w-full divide-y divide-dark-border">
                <thead class="bg-dark-bg">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                        Nom
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                        Date de cr√©ation
                    </th>
                    <th scope="col" class="relative px-6 py-3">
                        <span class="sr-only">Actions</span>
                    </th>
                </tr>
                </thead>

                <tbody class="divide-y divide-dark-border">
                {% for tag in tags %}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-text-primary">
                            {{ tag.name }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">
                            {{ tag.createdAt|date('d/m/Y H:i') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="/admin/tags/edit?id={{ tag.id }}" 
                               class="dark-text-accent hover:text-green-primary mr-3">
                                Modifier
                            </a>
                            <a href="/admin/tags/trashed?id={{ tag.id }}" 
                               class="text-red-500 hover:text-red-400">
                                Archiver
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

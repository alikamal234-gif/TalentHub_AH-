<!DOCTYPE html>
<html lang="fr" class="h-full bg-black">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Talent HUB - Profil Candidat</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'dark-bg': '#000000',
                        'dark-card': '#111111',
                        'dark-border': '#1a1a1a',
                        'green-primary': '#10b981',
                        'green-secondary': '#059669',
                        'green-accent': '#34d399',
                        'text-primary': '#ffffff',
                        'text-secondary': '#a3a3a3'
                    }
                }
            }
        }
    </script>
    <style>
        body {
            background-color: #000000;
            color: #ffffff;
        }

        .dark-card {
            background-color: #111111;
            border-color: #1a1a1a;
        }

        .dark-input {
            background-color: #0a0a0a;
            border-color: #1a1a1a;
            color: #ffffff;
        }

        .dark-input:focus {
            border-color: #10b981;
            outline: none;
            box-shadow: 0 0 0 1px #10b981;
        }

        .dark-button {
            background-color: #10b981;
            color: #000000;
        }

        .dark-button:hover {
            background-color: #059669;
        }

        .dark-button-secondary {
            background-color: #1a1a1a;
            color: #ffffff;
            border: 1px solid #333333;
        }

        .dark-button-secondary:hover {
            background-color: #262626;
        }

        .dark-text-secondary {
            color: #a3a3a3;
        }

        .dark-text-accent {
            color: #34d399;
        }

        .dark-border {
            border-color: #1a1a1a;
        }

        .dark-hover:hover {
            background-color: #1a1a1a;
        }

        .dark-active {
            background-color: #0a0a0a;
            border-bottom: 2px solid #10b981;
        }

        .profile-header {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }

        .profile-image {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid #000000;
            object-fit: cover;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .skill-tag {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            background-color: #1a1a1a;
            border: 1px solid #333333;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            transition: all 0.2s ease;
            position: relative;
        }

        .skill-tag:hover {
            background-color: #10b981;
            color: #000000;
            border-color: #10b981;
        }

        .skill-tag .remove-skill {
            margin-left: 0.5rem;
            cursor: pointer;
            font-weight: bold;
            opacity: 0.7;
            transition: opacity 0.2s ease;
        }

        .skill-tag .remove-skill:hover {
            opacity: 1;
        }

        .stat-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(16, 185, 129, 0.2);
        }

        .timeline-item {
            position: relative;
            padding-left: 40px;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: 8px;
            top: 0;
            bottom: 0;
            width: 2px;
            background-color: #1a1a1a;
        }

        .timeline-item:last-child::before {
            display: none;
        }

        .timeline-dot {
            position: absolute;
            left: 0;
            top: 8px;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            background-color: #10b981;
            border: 3px solid #000000;
        }

        .progress-bar {
            height: 8px;
            background-color: #1a1a1a;
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background-color: #10b981;
            transition: width 0.3s ease;
        }

        .skills-modal {
            display: none;
            position: fixed;
            z-index: 50;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.8);
        }

        .skills-modal.active {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .skill-input-container {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            padding: 0.5rem;
            background-color: #0a0a0a;
            border: 1px solid #1a1a1a;
            border-radius: 0.375rem;
            min-height: 60px;
            cursor: text;
        }

        .skill-input-container:focus-within {
            border-color: #10b981;
            box-shadow: 0 0 0 1px #10b981;
        }

        .skill-item {
            display: inline-flex;
            align-items: center;
            background-color: #10b981;
            color: #000000;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            animation: tagAppear 0.2s ease-in-out;
        }

        @keyframes tagAppear {
            from {
                opacity: 0;
                transform: scale(0.8);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .skill-remove {
            margin-left: 0.5rem;
            cursor: pointer;
            font-weight: bold;
            transition: transform 0.2s ease;
        }

        .skill-remove:hover {
            transform: scale(1.2);
        }

        .skill-suggestion {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            margin: 0.25rem;
            background-color: #1a1a1a;
            border: 1px solid #333333;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .skill-suggestion:hover {
            background-color: #10b981;
            color: #000000;
            border-color: #10b981;
            transform: translateY(-2px);
        }

        .skill-suggestion.selected {
            background-color: #10b981;
            color: #000000;
            border-color: #10b981;
        }

        .category-title {
            font-size: 0.75rem;
            font-weight: 600;
            color: #10b981;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body class="h-full">
<!-- Navigation -->
<nav class="dark-card border-b dark-border">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <div class="flex">
                <!-- Logo -->
                <div class="flex-shrink-0 flex items-center">
                    <h1 class="text-xl font-bold text-green-primary">
                        <i class="fas fa-briefcase mr-2"></i>Talent HUB
                    </h1>
                </div>
                <!-- Navigation links -->
                <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                    <a href="#" class="dark-active inline-flex items-center px-1 pt-1 text-sm font-medium">
                        Mon profil
                    </a>
                    <a href="#"
                       class="border-transparent text-text-secondary hover:text-text-primary inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                        Mes candidatures
                    </a>
                    <a href="#"
                       class="border-transparent text-text-secondary hover:text-text-primary inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                        Offres recommandées
                    </a>
                    <a href="#"
                       class="border-transparent text-text-secondary hover:text-text-primary inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                        Messages
                    </a>
                </div>
            </div>
            <div class="flex items-center">
                <!-- Notifications -->
                <button class="relative p-1 rounded-full text-text-secondary hover:text-text-primary mr-4">
                    <i class="fas fa-bell"></i>
                    <span class="absolute top-0 right-0 block h-2 w-2 rounded-full bg-green-primary"></span>
                </button>
                <!-- Profile dropdown -->
                <div class="relative">
                    <button id="profileMenuButton"
                            class="dark-card flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-primary p-1">
                        <span class="sr-only">Ouvrir le menu utilisateur</span>
                        <div class="h-8 w-8 rounded-full bg-green-primary flex items-center justify-center text-black">
                            <i class="fas fa-user"></i>
                        </div>
                    </button>
                    <div id="profileMenu"
                         class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg dark-card ring-1 ring-dark-border">
                        <div class="py-1">
                            <a href="#"
                               class="block px-4 py-2 text-sm text-text-primary hover:bg-dark-hover">Paramètres</a>
                            <a href="#" class="block px-4 py-2 text-sm text-text-primary hover:bg-dark-hover">Aide</a>
                            <a href="#" class="block px-4 py-2 text-sm text-text-primary hover:bg-dark-hover">Déconnexion</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

<!-- Main content -->
<main class="flex-1 dark-scrollbar overflow-auto">
    <div class="py-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Flash Messages -->
            {% if request.session.hasFlash('success') %}
                <div class="bg-green-500 text-white p-4 rounded-lg mb-6 flex justify-between items-center">
                    <span>{{ request.session.flash('success') }}</span>
                </div>
            {% endif %}
            {% if request.session.hasFlash('error') %}
                <div class="bg-red-500 text-white p-4 rounded-lg mb-6 flex justify-between items-center">
                    <span>{{ request.session.flash('error') }}</span>
                </div>
            {% endif %}

            <!-- Profile Header -->
            <div class="profile-header rounded-lg p-6 mb-6">
                <div class="flex flex-col md:flex-row items-center md:items-end space-y-4 md:space-y-0 md:space-x-6">
                    <div class="relative">
                        {% if request.user.imageUrl %}
                            <img src="{{ request.user.imageUrl }}" alt="Photo de profil" class="profile-image">
                        {% else %}
                            <img src="https://picsum.photos/seed/candidate/120/120.jpg" alt="Photo de profil"
                                 class="profile-image">
                        {% endif %}
                    </div>
                    <div class="flex-1 text-center md:text-left">
                        <h2 class="text-2xl font-bold text-white">{{ request.user.name }}</h2>
                        <p class="text-green-100">{{ request.user.speciality }}</p>
                        <div class="flex flex-wrap justify-center md:justify-start gap-2 mt-2">
                            <span class="text-sm text-green-100"><i
                                        class="fas fa-envelope mr-1"></i>{{ request.user.email }}</span>
                            <span class="text-sm text-green-100"><i
                                        class="fas fa-phone mr-1"></i>{{ request.user.phone }}</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tabs -->
            <div class="border-b dark-border mb-6">
                <nav class="-mb-px flex space-x-8">
                    <button class="tab-btn dark-active py-2 px-1 border-b-2 font-medium text-sm" data-tab="about">
                        À propos
                    </button>
                    <button class="tab-btn border-transparent py-2 px-1 border-b-2 font-medium text-sm text-text-secondary hover:text-text-primary"
                            data-tab="applications">
                        Candidatures
                    </button>
                    <button class="tab-btn border-transparent py-2 px-1 border-b-2 font-medium text-sm text-text-secondary hover:text-text-primary"
                            data-tab="security">
                        Sécurité
                    </button>
                </nav>
            </div>

            <!-- Tab Content -->
            <div id="about" class="tab-content active">
                <div class="dark-card p-6 rounded-lg border dark-border">
                    <form class="mt-8 space-y-6" action="/candidate/profile/update" method="post" enctype="multipart/form-data">
                        <div class="space-y-4">
                            <!-- Name fields -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label for="name" class="block text-sm font-medium text-text-primary mb-2">
                                        Nom et Prénom
                                    </label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <i class="fas fa-user text-gray-400"></i>
                                        </div>
                                        <input id="name" name="name" type="text" required value="{{ request.user.name }}"
                                               class="dark-input w-full pl-10 pr-3 py-2 border rounded-md focus:outline-none"
                                               placeholder="Ali Hajjaji">
                                    </div>
                                </div>
                                <!-- Speciality field -->
                                <div>
                                    <label for="speciality" class="block text-sm font-medium text-text-primary mb-2">
                                        Spécialité
                                    </label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <i class="fas fa-briefcase text-gray-400"></i>
                                        </div>
                                        <input id="speciality" name="speciality" type="text" required value="{{ request.user.speciality }}"
                                               class="dark-input w-full pl-10 pr-3 py-2 border rounded-md focus:outline-none"
                                               placeholder="Développeur Full Stack, UX Designer, ...">
                                    </div>
                                </div>
                            </div>


                            <!-- Email field -->
                            <div>
                                <label for="registerEmail" class="block text-sm font-medium text-text-primary mb-2">
                                    Email
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-envelope text-gray-400"></i>
                                    </div>
                                    <input id="registerEmail" name="email" type="email" autocomplete="email" required value="{{ request.user.email }}"
                                           class="dark-input w-full pl-10 pr-3 py-2 border rounded-md focus:outline-none"
                                           placeholder="votre@email.com">
                                </div>
                            </div>

                            <!-- Phone field -->
                            <div>
                                <label for="phone" class="block text-sm font-medium text-text-primary mb-2">
                                    Téléphone
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-phone text-gray-400"></i>
                                    </div>
                                    <input id="phone" name="phone" type="tel" required value="{{ request.user.phone }}"
                                           class="dark-input w-full pl-10 pr-3 py-2 border rounded-md focus:outline-none"
                                           placeholder="+33 6 12 34 56 78">
                                </div>
                            </div>

                            <!-- Image field -->
                            <div>
                                <label for="image" class="block text-sm font-medium text-text-primary mb-2">
                                    Photo de profil
                                </label>
                                <input id="image" name="image" type="file" accept="image/*"
                                       class="dark-input w-full px-3 py-2 border rounded-md focus:outline-none">
                            </div>
                        </div>

                        <div>
                            <button type="submit"
                                    class="dark-button w-full py-2 px-4 border border-transparent text-sm font-medium rounded-md text-black">
                                Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div id="applications" class="tab-content">
                <div class="dark-card rounded-lg border dark-border">
                    <div class="px-6 py-4 border-b dark-border">
                        <h3 class="text-lg font-medium text-text-primary">Mes candidatures</h3>
                    </div>
                    <div class="overflow-hidden">
                        <table class="min-w-full divide-y divide-dark-border">
                            <thead class="bg-dark-bg">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                                    Statut
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                                    Date
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                                    Message
                                </th>
                                <th scope="col" class="relative px-6 py-3">
                                    <span class="sr-only">Actions</span>
                                </th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-dark-border">
                            {% for candidature in candidatures %}
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        {% if candidature.status == 'pending' %}
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">En attente</span>
                                        {% elseif candidature.status == 'accepted' %}
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Acceptée</span>
                                        {% elseif candidature.status == 'rejected' %}
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Refusée</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">
                                        {{ candidature.createdAt|date('d/m/Y') }}
                                    </td>
                                    <td class="px-6 py-4 text-sm text-text-secondary max-w-xs truncate">
                                        {{ candidature.message|default('Pas de message') }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <a href="{{ candidature.cvUrl }}" target="_blank" class="dark-text-accent hover:text-green-primary">CV</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="px-6 py-10 text-center text-sm text-text-secondary italic">
                                        Aucune candidature pour le moment.
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
        </div>

            <div id="security" class="tab-content">
                <div class="dark-card p-6 rounded-lg border dark-border">
                    <h3 class="text-lg font-medium text-text-primary mb-6">Changer le mot de passe</h3>
                    <form class="space-y-6" action="/candidate/profile/password" method="post">
                        <div class="space-y-4">
                            <div>
                                <label for="current_password" class="block text-sm font-medium text-text-primary mb-2">
                                    Mot de passe actuel
                                </label>
                                <input id="current_password" name="current_password" type="password" required
                                       class="dark-input w-full px-3 py-2 border rounded-md focus:outline-none">
                            </div>
                            <div>
                                <label for="new_password" class="block text-sm font-medium text-text-primary mb-2">
                                    Nouveau mot de passe
                                </label>
                                <input id="new_password" name="new_password" type="password" required
                                       class="dark-input w-full px-3 py-2 border rounded-md focus:outline-none">
                            </div>
                            <div>
                                <label for="confirm_password" class="block text-sm font-medium text-text-primary mb-2">
                                    Confirmer le nouveau mot de passe
                                </label>
                                <input id="confirm_password" name="confirm_password" type="password" required
                                       class="dark-input w-full px-3 py-2 border rounded-md focus:outline-none">
                            </div>
                        </div>
                        <div>
                            <button type="submit"
                                    class="dark-button w-full py-2 px-4 border border-transparent text-sm font-medium rounded-md text-black">
                                Mettre à jour le mot de passe
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    // Profile dropdown
    document.getElementById('profileMenuButton').addEventListener('click', function () {
        document.getElementById('profileMenu').classList.toggle('hidden');
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', function (event) {
        const profileMenu = document.getElementById('profileMenu');
        const profileMenuButton = document.getElementById('profileMenuButton');

        if (!profileMenuButton.contains(event.target) && !profileMenu.contains(event.target)) {
            profileMenu.classList.add('hidden');
        }
    });

    // Tab functionality
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');

    tabBtns.forEach(btn => {
        btn.addEventListener('click', function () {
            // Remove active class from all tabs and contents
            tabBtns.forEach(tab => {
                tab.classList.remove('dark-active');
                tab.classList.add('border-transparent');
                tab.classList.remove('text-text-primary');
                tab.classList.add('text-text-secondary');
            });

            tabContents.forEach(content => {
                content.classList.remove('active');
            });

            // Add active class to clicked tab and corresponding content
            this.classList.add('dark-active');
            this.classList.remove('border-transparent');
            this.classList.remove('text-text-secondary');
            this.classList.add('text-text-primary');

            const tabId = this.getAttribute('data-tab');
            document.getElementById(tabId).classList.add('active');
        });
    });
</script>
</body>
</html>
    <script>
        // Profile dropdown
        document.getElementById('profileMenuButton').addEventListener('click', function() {
            document.getElementById('profileMenu').classList.toggle('hidden');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const profileMenu = document.getElementById('profileMenu');
            const profileMenuButton = document.getElementById('profileMenuButton');
            
            if (!profileMenuButton.contains(event.target) && !profileMenu.contains(event.target)) {
                profileMenu.classList.add('hidden');
            }
        });

        // Tab functionality
        const tabBtns = document.querySelectorAll('.tab-btn');
        const tabContents = document.querySelectorAll('.tab-content');

        tabBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                // Remove active class from all tabs and contents
                tabBtns.forEach(tab => {
                    tab.classList.remove('dark-active');
                    tab.classList.add('border-transparent');
                    tab.classList.remove('text-text-primary');
                    tab.classList.add('text-text-secondary');
                });
                
                tabContents.forEach(content => {
                    content.classList.remove('active');
                });
                
                // Add active class to clicked tab and corresponding content
                this.classList.add('dark-active');
                this.classList.remove('border-transparent');
                this.classList.remove('text-text-secondary');
                this.classList.add('text-text-primary');
                
                const tabId = this.getAttribute('data-tab');
                document.getElementById(tabId).classList.add('active');
            });
        });

        // Skills Modal
        const addSkillsBtn = document.getElementById('addSkillsBtn');
        const skillsModal = document.getElementById('skillsModal');
        const closeSkillsModal = document.getElementById('closeSkillsModal');
        const cancelSkills = document.getElementById('cancelSkills');
        const saveSkills = document.getElementById('saveSkills');
        const skillInput = document.getElementById('skillInput');
        const skillInputContainer = document.getElementById('skillInputContainer');
        
        let tempSkills = [];

        // Open skills modal
        addSkillsBtn.addEventListener('click', function() {
            skillsModal.classList.add('active');
            // Load existing skills
            loadExistingSkills();
        });

        // Close skills modal
        closeSkillsModal.addEventListener('click', function() {
            skillsModal.classList.remove('active');
        });

        cancelSkills.addEventListener('click', function() {
            skillsModal.classList.remove('active');
        });

        // Close modal when clicking outside
        window.addEventListener('click', function(event) {
            if (event.target === skillsModal) {
                skillsModal.classList.remove('active');
            }
        });

        // Load existing skills
        function loadExistingSkills() {
            tempSkills = [];
            document.querySelectorAll('.skill-tag').forEach(tag => {
                const skillName = tag.textContent.replace('×', '').trim();
                tempSkills.push(skillName);
            });
            updateTempSkillsDisplay();
        }

        // Update temp skills display
        function updateTempSkillsDisplay() {
            // Clear existing temp skills
            skillInputContainer.querySelectorAll('.skill-item').forEach(item => item.remove());
            
            // Add temp skills
            tempSkills.forEach(skill => {
                const skillElement = document.createElement('div');
                skillElement.className = 'skill-item';
                skillElement.innerHTML = `
                    ${skill}
                    <span class="skill-remove">&times;</span>
                `;
                
                skillElement.querySelector('.skill-remove').addEventListener('click', function() {
                    tempSkills = tempSkills.filter(s => s !== skill);
                    updateTempSkillsDisplay();
                });
                
                skillInputContainer.insertBefore(skillElement, skillInput);
            });
        }

        // Add skill by typing
        skillInput.addEventListener('keydown', function(event) {
            if (event.key === 'Enter') {
                event.preventDefault();
                const skillValue = this.value.trim();
                
                if (skillValue && !tempSkills.includes(skillValue)) {
                    tempSkills.push(skillValue);
                    updateTempSkillsDisplay();
                    this.value = '';
                }
            }
        });

        // Add skill by clicking suggestions
        document.querySelectorAll('.skill-suggestion').forEach(suggestion => {
            suggestion.addEventListener('click', function() {
                const skill = this.getAttribute('data-skill');
                
                if (this.classList.contains('selected')) {
                    // Remove skill
                    this.classList.remove('selected');
                    tempSkills = tempSkills.filter(s => s !== skill);
                } else {
                    // Add skill
                    this.classList.add('selected');
                    if (!tempSkills.includes(skill)) {
                        tempSkills.push(skill);
                    }
                }
                
                updateTempSkillsDisplay();
            });
        });

        // Save skills
        saveSkills.addEventListener('click', function() {
            if (tempSkills.length === 0) {
                alert('Veuillez sélectionner au moins une compétence');
                return;
            }
            
            // Update skills display on main page
            updateSkillsDisplay();
            
            // Show success message
            const successMessage = document.createElement('div');
            successMessage.className = 'fixed top-4 right-4 bg-green-primary text-black p-4 rounded-md shadow-lg z-50';
            successMessage.textContent = `Compétences mises à jour avec succès (${tempSkills.length} compétences)`;
            document.body.appendChild(successMessage);
            
            // Remove success message after 3 seconds
            setTimeout(() => {
                document.body.removeChild(successMessage);
            }, 3000);
            
            // Close modal
            skillsModal.classList.remove('active');
        });

        // Update skills display on main page
        function updateSkillsDisplay() {
            // Clear all skill containers
            document.getElementById('frontendSkills').innerHTML = '';
            document.getElementById('backendSkills').innerHTML = '';
            document.getElementById('databaseSkills').innerHTML = '';
            document.getElementById('toolsSkills').innerHTML = '';
            
            // Categorize and add skills
            const frontendSkills = ['HTML5', 'CSS3', 'JavaScript', 'TypeScript', 'React', 'Vue.js', 'Angular', 'Svelte', 'Next.js', 'Tailwind CSS', 'Bootstrap', 'Sass/SCSS'];
            const backendSkills = ['Node.js', 'Express.js', 'PHP', 'Laravel', 'Symfony', 'Python', 'Django', 'Flask', 'Ruby', 'Ruby on Rails', 'Java', 'Spring Boot', 'C#', '.NET', 'Go', 'Rust'];
            const databaseSkills = ['MySQL', 'PostgreSQL', 'MongoDB', 'Redis', 'SQLite', 'Oracle', 'SQL Server', 'Elasticsearch', 'Firebase'];
            const toolsSkills = ['Git', 'REST API', 'GraphQL', 'Webpack', 'Babel', 'Jest', 'Cypress', 'Figma', 'Agile', 'Scrum', 'Docker', 'Kubernetes', 'CI/CD', 'Jenkins', 'GitLab CI', 'GitHub Actions', 'AWS', 'Azure', 'Google Cloud', 'Terraform', 'Ansible'];
            
            tempSkills.forEach(skill => {
                const skillElement = document.createElement('span');
                skillElement.className = 'skill-tag';
                skillElement.innerHTML = `${skill}<span class="remove-skill">&times;</span>`;
                
                // Add remove functionality
                skillElement.querySelector('.remove-skill').addEventListener('click', function() {
                    skillElement.remove();
                    tempSkills = tempSkills.filter(s => s !== skill);
                });
                
                // Add to appropriate category
                if (frontendSkills.includes(skill)) {
                    document.getElementById('frontendSkills').appendChild(skillElement);
                } else if (backendSkills.includes(skill)) {
                    document.getElementById('backendSkills').appendChild(skillElement);
                } else if (databaseSkills.includes(skill)) {
                    document.getElementById('databaseSkills').appendChild(skillElement);
                } else if (toolsSkills.includes(skill)) {
                    document.getElementById('toolsSkills').appendChild(skillElement);
                }
            });
        }

        // Remove existing skills
        document.querySelectorAll('.remove-skill').forEach(removeBtn => {
            removeBtn.addEventListener('click', function() {
                this.parentElement.remove();
            });
        });

        // Edit profile modal
        const editProfileBtn = document.getElementById('editProfileBtn');
        const editProfileModal = document.getElementById('editProfileModal');
        const closeEditModal = document.getElementById('closeEditModal');
        const cancelEdit = document.getElementById('cancelEdit');

        editProfileBtn.addEventListener('click', function() {
            editProfileModal.classList.remove('hidden');
        });

        closeEditModal.addEventListener('click', function() {
            editProfileModal.classList.add('hidden');
        });

        cancelEdit.addEventListener('click', function() {
            editProfileModal.classList.add('hidden');
        });

        // Close modal when clicking outside
        window.addEventListener('click', function(event) {
            if (event.target === editProfileModal) {
                editProfileModal.classList.add('hidden');
            }
        });

        // Form submission
        document.querySelector('#editProfileModal form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Show success message
            const successMessage = document.createElement('div');
            successMessage.className = 'fixed top-4 right-4 bg-green-primary text-black p-4 rounded-md shadow-lg z-50';
            successMessage.textContent = 'Profil mis à jour avec succès';
            document.body.appendChild(successMessage);
            
            // Remove success message after 3 seconds
            setTimeout(() => {
                document.body.removeChild(successMessage);
            }, 3000);
            
            // Close modal
            editProfileModal.classList.add('hidden');
        });

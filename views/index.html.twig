    <script>
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        
        mobileMenuBtn.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Button click handlers
        const loginBtn = document.getElementById('loginBtn');
        const registerBtn = document.getElementById('registerBtn');
        const mobileLoginBtn = document.getElementById('mobileLoginBtn');
        const mobileRegisterBtn = document.getElementById('mobileRegisterBtn');
        const candidateBtn = document.getElementById('candidateBtn');
        const recruiterBtn = document.getElementById('recruiterBtn');
        const ctaCandidateBtn = document.getElementById('ctaCandidateBtn');
        const ctaRecruiterBtn = document.getElementById('ctaRecruiterBtn');

        // Redirect to login/register page
        function redirectToAuth() {
            window.location.href = 'auth.html';
        }

        loginBtn.addEventListener('click', redirectToAuth);
        registerBtn.addEventListener('click', redirectToAuth);
        mobileLoginBtn.addEventListener('click', redirectToAuth);
        mobileRegisterBtn.addEventListener('click', redirectToAuth);

        // Redirect to candidate page
        function redirectToCandidate() {
            window.location.href = 'candidate.html';
        }

        candidateBtn.addEventListener('click', redirectToCandidate);
        ctaCandidateBtn.addEventListener('click', redirectToCandidate);

        // Redirect to recruiter page
        function redirectToRecruiter() {
            window.location.href = 'recruiter.html';
        }

        recruiterBtn.addEventListener('click', redirectToRecruiter);
        ctaRecruiterBtn.addEventListener('click', redirectToRecruiter);

        // Pricing buttons
        document.querySelectorAll('.dark-button').forEach(button => {
            if (button.textContent.includes('S\'inscrire') || button.textContent.includes('Commencer')) {
                button.addEventListener('click', redirectToAuth);
            }
        });
    </script>

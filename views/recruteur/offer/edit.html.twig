{% extends 'recruteur/base.html.twig' %}
{% block title "Modifier l'Offre" %}

{% block body_title "Modifier l'offre d'emploi" %}

{% block body %}
    <div class="max-w-4xl mx-auto">
        <div class="dark-card shadow rounded-lg border dark-border overflow-hidden">
            <div class="px-4 py-5 sm:px-6 border-b dark-border flex justify-between items-center">
                <h3 class="text-lg font-medium text-text-primary">Modifier les détails</h3>
                <a href="/recruteur/offres" class="text-text-secondary hover:text-text-primary">
                    <i class="fas fa-arrow-left mr-1"></i> Retour
                </a>
            </div>
            
            <form action="/recruteur/offres/update" method="POST" class="px-4 py-5 sm:p-6 space-y-6">
                <input type="hidden" name="id" value="{{ offer.id }}">
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-text-secondary mb-1">Titre de l'offre</label>
                        <input type="text" name="name" id="name" required
                               class="dark-input block w-full rounded-md border-green-primary border-2 shadow-sm px-4 py-2 text-text-primary focus:ring-green-primary focus:border-green-primary"
                               value="{{ offer.name }}">
                    </div>

                    <div>
                        <label for="category_id" class="block text-sm font-medium text-text-secondary mb-1">Catégorie</label>
                        <select name="category_id" id="category_id" required
                                class="dark-input block w-full rounded-md border-green-primary border-2 shadow-sm px-4 py-2 text-text-primary focus:ring-green-primary focus:border-green-primary">
                            {% for category in categories %}
                                <option value="{{ category.id }}" {% if offer.category and offer.category.id == category.id %}selected{% endif %}>
                                    {{ category.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div>
                        <label for="salary" class="block text-sm font-medium text-text-secondary mb-1">Salaire (€)</label>
                        <input type="number" step="0.01" name="salary" id="salary" required
                               class="dark-input block w-full rounded-md border-green-primary border-2 shadow-sm px-4 py-2 text-text-primary focus:ring-green-primary focus:border-green-primary"
                               value="{{ offer.salary }}">
                    </div>

                    <div>
                        <label for="city" class="block text-sm font-medium text-text-secondary mb-1">Ville</label>
                        <input type="text" name="city" id="city" required
                               class="dark-input block w-full rounded-md border-green-primary border-2 shadow-sm px-4 py-2 text-text-primary focus:ring-green-primary focus:border-green-primary"
                               value="{{ offer.city }}">
                    </div>

                    <div>
                        <label for="company" class="block text-sm font-medium text-text-secondary mb-1">Entreprise</label>
                        <input type="text" name="company" id="company" required
                               class="dark-input block w-full rounded-md border-green-primary border-2 shadow-sm px-4 py-2 text-text-primary focus:ring-green-primary focus:border-green-primary"
                               value="{{ offer.company }}">
                    </div>

                    <div>
                        <label for="contact" class="block text-sm font-medium text-text-secondary mb-1">Contact (Email/Tél)</label>
                        <input type="text" name="contact" id="contact" required
                               class="dark-input block w-full rounded-md border-green-primary border-2 shadow-sm px-4 py-2 text-text-primary focus:ring-green-primary focus:border-green-primary"
                               value="{{ offer.contact }}">
                    </div>
                </div>

                <div>
                    <label for="description" class="block text-sm font-medium text-text-secondary mb-1">Description</label>
                    <textarea name="description" id="description" rows="6" required
                              class="dark-input block w-full rounded-md border-green-primary border-2 shadow-sm px-4 py-2 text-text-primary focus:ring-green-primary focus:border-green-primary">{{ offer.description }}</textarea>
                </div>

                <div>
                    <label for="tags" class="block text-sm font-medium text-text-secondary mb-1">Tags</label>
                    <select name="tags[]" id="tags" class="tags w-full" multiple="multiple">
                        {% for tag in tags %}
                            {% set is_selected = false %}
                            {% for offerTag in offer.tags %}
                                {% if offerTag.id == tag.id %}
                                    {% set is_selected = true %}
                                {% endif %}
                            {% endfor %}
                            <option value="{{ tag.id }}" {% if is_selected %}selected{% endif %}>
                                {{ tag.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="flex justify-end pt-4 border-t dark-border">
                    <button type="submit" class="dark-button inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-black shadow-sm">
                        <i class="fas fa-save mr-2"></i>
                        Enregistrer les modifications
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
